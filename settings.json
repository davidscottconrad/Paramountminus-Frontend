{
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    },
    "eslint.alwaysShowStatus": true,
    "eslint.validate": [
      "javascript",
      "javascriptreact",
      "vue",
      "typescript",
      "typescriptreact"
    ],
    "editor.formatOnSave": true, // Ensure general format on save is enabled
    "[javascript]": {
      "editor.defaultFormatter": "dbaeumer.vscode-eslint" // Use ESLint as the default formatter for JavaScript
    },
    "[vue]": {
      "editor.defaultFormatter": "dbaeumer.vscode-eslint" // Use ESLint as the default formatter for Vue files
    }
  }
  